            "schema": {},
            "examples": {
              "application/json": {
                "error": "Missing required fields"
              }
            }
          },
          "500": {
            "description": "Server error during subscription",
            "schema": {},
            "examples": {
              "application/json": {
                "error": "Internal server error"
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/alphaSubscribeRequest"
            }
          }
        ],
        "tags": [
          "subscription"
        ]
      }
    },
